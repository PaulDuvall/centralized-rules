{
  "languages": {
    "python": {
      "display_name": "Python",
      "file_patterns": ["*.py"],
      "test_patterns": ["test_*.py", "*_test.py"],
      "rules": [
        {
          "name": "Python Coding Standards",
          "file": "languages/python/coding-standards.md",
          "when": "Python files (.py)"
        },
        {
          "name": "Python Testing",
          "file": "languages/python/testing.md",
          "when": "Python testing"
        }
      ]
    },
    "typescript": {
      "display_name": "TypeScript",
      "file_patterns": ["*.ts", "*.tsx"],
      "test_patterns": ["*.test.ts", "*.spec.ts", "*.test.tsx", "*.spec.tsx"],
      "rules": [
        {
          "name": "Typescript Coding Standards",
          "file": "languages/typescript/coding-standards.md",
          "when": "TypeScript files (.ts, .tsx)"
        },
        {
          "name": "Typescript Testing",
          "file": "languages/typescript/testing.md",
          "when": "TypeScript testing"
        }
      ]
    },
